<main class='ms-5'>
    <div>
        {{> headerNav}}
    
        <hr />

        <div class="row">
            
            {{#with formBlock}}
                <div class="col-8">
                    <div>
                        <div class="my-2"><h1>{{header}}</h1></div>
                        {{#with rating}}
                            <p>{{title}}: {{value}}</p>
                        {{/with}}
                    </div>
                                
                    <hr>
                
                    <div>
                        {{#with actionBlock}}
                            <div class='nav nav-tabs my-5'>
                                {{#each tabs}}
                                    <div class='nav-item'>
                                        {{#if isActive}}
                                            <a
                                            href='#'
                                            class='nav-link active'
                                            >{{text}}</a>
                                        {{else}}
                                            <a
                                                href='#'
                                                class='nav-link'
                                            >{{text}}</a>
                                        {{/if}}
                                    </div>
                                {{/each}}
                            </div>

                            <hr>

                            <div class="my-5">
                                {{#with report}}
                                    <div class='card'>
                                        <div class='card-body'>
                                        <p>{{title}}</p>
                                        {{#with button}}
                                            <div class='m-3'>
                                            <a
                                                href='{{link}}'
                                                class='btn btn-secondary'
                                            >{{text}}</a>
                                            </div>
                                        {{/with}}
                                        </div>
                                    </div>
                                {{/with}}
                            </div>
                        {{/with}}
                    </div>
                
                    <hr>

                    <div class="list-group my-5">
                        {{#with feedbackBlock}}
                            <div class="list-group-item">
                                <h4><b>{{title}}</b></h4>
                                <div class="row">
                                    {{#each buttons}}
                                        <div class="col-3">
                                            {{#if isWarning}}
                                                <a href="{{link}}" class='btn btn-warning btn-sm p-1'>{{text}}</a>
                                            {{/if}}
                                            {{#if isSuccess}}
                                                <a href="{{link}}" class='btn btn-success btn-sm p-1'>{{text}}</a>
                                            {{/if}}
                                            {{#if isDanger}}
                                                <a href="{{link}}" class='btn btn-danger btn-sm p-1'>{{text}}</a>
                                            {{/if}}
                                        </div>
                                    {{/each}}
                                </div>
                                
                            </div>
                        {{/with}}
                    </div>
                </div>  
                
                

                <div class="col-4 ">
                    {{#with goodsInfo}}
                        <div class='card my-3'>
                            <img class='card-img-top' src='{{photo}}' />
                            <div class='card-body'>
                                <h5 class='card-title'>{{name}}</h5>
                            </div>
                        </div>

                        <div class='card my-3'>
                            <div class='card-body'>
                                <h4 class='card-title'>{{price}}</h4>
                                <div>
                                    {{#if inMarket}}
                                        <p class="text-success"><b>In stock</b></p>
                                    {{/if}}
                                </div>
                                <div>
                                    {{#each buttons}}
                                        <div>
                                            {{#if isPrimary}}
                                                <a href="{{link}}"
                                                class='btn btn-primary my-2'
                                                >{{text}}</a>
                                            {{/if}}
                                            {{#if isSecondary}}
                                                <a href="{{link}}"
                                                class='btn btn-secondary my-2'
                                                >{{text}}</a>
                                            {{/if}}
                                        </div>
                                    {{/each}}
                                </div>

                                
                            </div>
                        </div>

                        <div class='card my-3'>
                            <div class='card-body'>
                                <div class="my-2">
                                    {{#with seller}}
                                        <p>{{title}}: <b>{{value}}</b></p>
                                    {{/with}}
                                </div>
                            </div>
                        </div>
                    {{/with}}
                </div>

            {{/with}}
            
            <hr>
        </div>


        <div>
            {{#each reviewList}}
                <div class="card my-4">
                    <div class="card m-2">
                        <div class="list-group">
                            <div class="list-group-item">
                                {{#with title}}
                                    <div>
                                        <p><b>{{userName}}</b></p>
                                        <p>{{caption}}</p>
                                        <p>{{date}}</p>
                                    </div>
                                {{/with}}
                            </div>
                            <div class="list-group-item">
                                {{#with reviewBody}}
                                    <div>
                                        {{#with seller}}
                                            <p>{{title}}: {{value}}</p>
                                        {{/with}}
                                    </div>
                                    <div>
                                        {{#with rating}}
                                            <p>{{title}}: {{value}}</p>
                                        {{/with}}
                                    </div>
                                    <div>
                                        {{#each text}}
                                            <p>{{this}}</p>
                                        {{/each}}
                                    </div>
                                    <div>
                                        {{#with advantages}}
                                            <div>
                                                <div><b>{{title}}:</b></div>
                                                {{text}}
                                            </div>
                                        {{/with}}
                                    </div>
                                    <div class="mt-2">
                                        {{#with disadvantages}}
                                            <div>
                                                <div><b>{{title}}:</b></div>
                                                {{text}}
                                            </div>
                                        {{/with}}
                                    </div>
                                    <div class="row">
                                        <div class="col m-2">
                                            {{#each images}}
                                                <img src="{{this}}" alt="Picture">
                                            {{/each}}
                                        </div>
                                    </div>
                                {{/with}}
                            </div>
                        </div>
                    </div>

                    {{#with reviewBody}}
                        <div class="ps-5 pe-2">
                            {{#each coments}}
                                <div class="card my-2">
                                    <div class="card-body">
                                        <p class='card-title'>{{userName}}</p>
                                        <p>{{date}}</p>
                                        <p>{{text}}</p>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    {{/with}}
                </div>
            {{/each}}
        </div>


        <div class='col-12 text-center'>
            {{#with service}}
                <div class='card text-bg-success'>
                    <div class='card-body'>
                    <div class='card-title'><h2>{{title}}</h2></div>
                    <p>{{description}}</p>
                    {{#each buttons}}
                        <div class='mt-3'>
                        <a
                            href='{{link}}'
                            class='btn btn-primary'
                        >{{text}}</a>
                        </div>
                    {{/each}}
                    </div>
                </div>
            {{/with}}
        </div>

        <hr>

        {{> footerNav}}

    </div>
     
    
</main>